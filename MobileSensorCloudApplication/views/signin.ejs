<body ng-app = "" class = "login">

  <div ng-controller = "appController">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" align="center">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" ng-model = "credentials.email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" ng-model = "credentials.password">
                                </div>
                                
                                <div class="form-group" align="center">
                                &nbsp<input type = "radio" name = "usertype" value = "3" ng-model = "usertype">&nbspUser&nbsp</input>&nbsp
								&nbsp<input type = "radio" name = "usertype" value = "2" ng-model = "usertype">&nbspSensor Owner&nbsp</input>&nbsp
								&nbsp<input type = "radio" name = "usertype" value = "1" ng-model = "usertype">&nbspAdmin&nbsp</input>&nbsp
                                </div>
                                
                                <!-- Change this to a button or input when using this as a form -->
                             <!--   <a href="" class="btn btn-lg btn-success btn-block" ng-click = "signin()">Login</a> -->
                                <button class="btn btn-lg btn-success btn-block" ng-click = "signin()">SIGN IN</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

 <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.1/angular.min.js"></script>
    <script>
        function appController($scope, $http) {
        	
        	$scope.credentials = {};
        	$scope.data = [];
			   	
        	$scope.signin = function(){
        		
        		$scope.data[0] = $scope.credentials;
        		$scope.data[1] = $scope.usertype;
        		
            	$http({method: 'POST', url: '/signin', data: $scope.data}).then(function successCallback(response) {
            		    
            			if(response.data == "admin"){window.location.assign("/admin");}
            			else if(response.data == "sensorowner"){window.location.assign("/sensorowner");}
            			else if(response.data == "user"){window.location.assign("/user");}
            			else if(response.data == "invalid"){alert("Invalid Email / Password credentials");}            				
            	            			
            	}, function errorCallback(response) {});      
        	}            	
		};
	</script>


    <!-- jQuery -->
    <script src="../bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>
	</div>
</body>

</html>
