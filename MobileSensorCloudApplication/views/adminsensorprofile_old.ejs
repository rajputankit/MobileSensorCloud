<!DOCTYPE html>
<html>
  <head>      
    <link rel="stylesheet" type="text/css">
    <title></title>    
  </head>
  
  <body ng-app = "" class = "login">
    
		
	<div ng-controller = "appController">
			
		<div>
			
			<p>Sensor : {{sensor.id}} {{sensor.sensorname}} {{sensor.sensorlocation}}</p>
						
		</div>		

	</div>
			
	    
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.1/angular.min.js"></script>
    <script>
       		
	function appController($scope, $http) {
        	
        	$scope.sensor = {};
        	
        	$http({method: 'GET', url: '/getsensorprofile'}).then(function successCallback(response) {
    		    
        		alert("sensor record " + JSON.stringify(response.data));
        		$scope.sensor = response.data[0];  
    	            			
    		}, function errorCallback(response) {});    
        	        	
        	
	};
	</script>
	
  </body>
</html>














